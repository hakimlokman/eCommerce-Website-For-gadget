@model Ecommerce_Project.Models.AppUser

@{
    ViewData["Title"] = "Login";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-6">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-12 text-center">
                            <div class="card-body p-md-5 mx-md-4 ">
                                <div class="row">
                                    <div class="col">
                                        <h1 class="display-5">Login Here</h1>

                                        <form asp-action="Login">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row mb-2">
                                                <label asp-for="Username" class="col-form-label col-3"></label>
                                                <div class="col-8">
                                                    <input asp-for="Username" class="form-control form-control-sm" />
                                                    <span asp-validation-for="Username" class="text-danger"></span>
                                                </div>
                          
                                            </div>

                                            <div class="row mb-2">
                                                <label asp-for="Password" class="col-form-label col-3"></label>
                                                <div class="col-8">
                                                    <input asp-for="Password" class="form-control form-control-sm" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="form-group">
                                                <input type="submit" value="Login" class="btn btn-primary mt-1" />
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div>
                                    <a asp-action="Index">Back to List</a>
                                    <a asp-action="SignUP" asp-controller="Home" class="btn btn-link">Registared ?</a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
